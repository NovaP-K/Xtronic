<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/resultsListCardView"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="10dp"
    android:orientation="vertical"
    app:cardBackgroundColor="#FFFFFF"
    app:cardCornerRadius="20dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="10dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/resultsQuizCode"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:fontFamily="@font/dosis_regular"
                android:text="#HEIJL"
                android:textColor="#116BD2"
                android:textSize="20sp" />

            <TextView
                android:id="@+id/resultsDate"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:fontFamily="@font/dosis_regular"
                android:text="Date"
                android:textAlignment="center"
                android:textColor="#3C64E9"
                android:textSize="20sp" />

        </LinearLayout>

        <TextView
            android:id="@+id/resultsQuizTopic"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:fontFamily="@font/yanone"
            android:text="Topic"
            android:textAlignment="gravity"
            android:textColor="#7F0AB9"
            android:textSize="20sp" />

    </LinearLayout>

</androidx.cardview.widget.CardView>